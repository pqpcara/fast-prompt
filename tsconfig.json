{
  "include": ["src"],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "source",

    "inlineSourceMap": true,
    "noEmitHelpers": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
  },
}
